// Content Wrapper. Contains page content
.content-wrapper
  // Content Header (Page header)
  section.content-header
    h1
      | こんにちは！
      strong #{page_title}
      |さん
      //small Version 2.0
    ol.breadcrumb.hidden-xs
      each breadcrumb in breadcrumbs
        if breadcrumb.name == index_config.homepage_name
          li
            a(href=breadcrumb.url)
              i.fa.fa-laptop
              |  #{breadcrumb.name}
        else if breadcrumb.name != page_title
          li: a(href=breadcrumb.url) #{breadcrumb.name}
        else
          li.active #{breadcrumb.name}
