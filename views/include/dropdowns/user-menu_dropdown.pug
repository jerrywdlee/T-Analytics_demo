// User Account: style can be found in dropdown.less
li.dropdown.user.user-menu
  a.dropdown-toggle(href='#', data-toggle='dropdown')
    img.user-image(src='dist/img/user2-160x160.jpg', alt='User Image')
    span.hidden-xs Alexander Pierce
  ul.dropdown-menu
    // User image
    li.user-header
      img.img-circle(src='dist/img/user2-160x160.jpg', alt='User Image')
      p
        | Alexander Pierce - Web Developer
        small Member since Nov. 2012
    // Menu Body
    li.user-body
      .row
        .col-xs-4.text-center
          a(href='#') Followers
        .col-xs-4.text-center
          a(href='#') Sales
        .col-xs-4.text-center
          a(href='#') Friends
      // /.row
    // Menu Footer
    li.user-footer
      .pull-left
        a.btn.btn-default.btn-flat(href='#') Profile
      .pull-right
        a.btn.btn-default.btn-flat(href='#') Sign out
